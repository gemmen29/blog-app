
<div class="users_wrapper">
    <div class="user_index_container">
      <div class="user_info">
        <h1>Post by <%= @post.user.name %></h1>
        <div class="user_info__posts_counter">
          Comments:
          <%= @post.comments_counter || 0 %>
          , Likes:
          <%= @post.likes_counter || 0 %>
        </div>
        <p class="post_text"><%= @post.text %></p>
      </div>
    </div>
    <div class="comments_info"> 
      <% @post.five_most_recent_comments.each_with_index do |comment, index| %>
        <div class="comment_info">
          <h4> <%= comment.user.name %>: </h4> 
          &nbsp;&nbsp;
          <p> <%= comment.text %> </p>
        </div>
      <% end %>
    </div>
</div>
