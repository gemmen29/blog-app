<h1 class="user_index_main_header">Show all users</h1>
<div class="users_wrapper">
  <% @users.each do |user| %>
    <div class="user_index_container">
      <%= image_tag("https://images.unsplash.com/photo-1508921912186-1d1a45ebb3c1", class: "user_image") %>
      <div class="user_info">
        <h2> <%= user.name %> </h2>
        <div class="user_info__posts_counter">
          Number of posts:
          <%= user.posts_counter || 0 %>
        </div>
      </div>
    </div>
  <% end %>
</div>