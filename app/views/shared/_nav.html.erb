<header class="d-flex justify-content-between align-items-center px-5 bg-dark text-white py-3">
  <%= link_to "Blog App", root_path, class: "nav-link" %>
  <nav>
    <ul class="d-flex gap-2 m-0">
      <% if user_signed_in? %>
        <li class="nav-item"><%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger text-white" %></li>
      <% else %>
        <li class="nav-item"><%= link_to "Sign in", new_user_session_path, class: "btn btn-success" %></li>
        <li class="nav-item"><%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary" %></li>
        <li class="nav-item"><%= link_to "Reset", new_user_password_path, class: "btn btn-info" %></li>
      <% end %>
    </ul>
  </nav>
</header>